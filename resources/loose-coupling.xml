<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean id="springHelper"
		class="com.atuldwivedi.springseason.loosecoupling.helper.OfferHelperWithSpring">
		<property name="offer">
			<ref bean="winterOffer" />
		</property>
	</bean>

	<bean id="summerOffer"
		class="com.atuldwivedi.springseason.loosecoupling.offer.SummerOffer" />
	<bean id="winterOffer"
		class="com.atuldwivedi.springseason.loosecoupling.offer.WinterOffer" />
</beans>
