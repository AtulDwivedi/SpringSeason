<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="customer" class="com.atuldwivedi.springseason.di.check.Customer" dependency-check="all">
		<!-- <property name="person" ref="person" />
		<property name="type" value="1" /> -->
		<property name="action" value="Buy" />
	</bean>

	<bean id="person" class="com.atuldwivedi.springseason.di.check.Person">
		<property name="name" value="Atul Dwivedi" />
		<property name="age" value="25" />
		<property name="address" value="Bengaluru, India" />
	</bean>

</beans>
